<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.activity.ChangePersonActivity"
    android:clickable="true"
    android:background="@drawable/white_round_shape"
   >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/change_person_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textAlignment="center"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_back_black"
        app:contentInsetStartWithNavigation="0dp"
        android:clickable="true"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编辑资料"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"/>
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clickable="true"
        >
        <ImageView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/mine_picture_second"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@drawable/touxiang"
            android:onClick="On_Change_picture"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="15dp"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
      >
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="昵称"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/mine_person_name_attr"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="五月她如景 >"
            android:paddingRight="15dp"
            android:gravity="right"/>
    </LinearLayout>



    <LinearLayout

        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/mine_person_sex_attr"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="女 >"
            android:paddingRight="15dp"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout

        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="生日"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/mine_person_birth_attr"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2008-1-1 >"
            android:gravity="right"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>
